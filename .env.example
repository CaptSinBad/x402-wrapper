# Privy Authentication (required for seller auth)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Database (choose one: Supabase OR local Postgres)
# For local development with Postgres:
DATABASE_URL=postgres://postgres:postgres@localhost:5432/x402db
USE_SUPABASE=false
USE_LOCAL_PG=true

# For Supabase (production-ready):
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# SUPABASE_SERVICE_KEY=your_service_key
# USE_SUPABASE=true

# Facilitator Configuration (Coinbase x402)
FACILITATOR_URL=http://localhost:3001
NEXT_PUBLIC_FACILITATOR_URL=http://localhost:3001

# Coinbase x402 CDP (when using CDP integration)
COINBASE_API_KEY=your_api_key
COINBASE_API_SECRET=your_api_secret
COINBASE_NETWORK=base

# Seller Configuration
SELLER_ADDRESS=0x0000000000000000000000000000000000000000

# Feature Flags
DEV_SETTLE_ENABLED=true
RUN_WORKER_INTEGRATION=false
NODE_ENV=development

# Reservation Settings (in seconds)
RESERVATION_TTL=900

# Payment Settings (in seconds)
PAYMENT_MAX_TIMEOUT=60

# Testing
VITEST=false
