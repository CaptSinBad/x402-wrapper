            "optional": true
        },
        "react-dom": {
            "optional": true
        }
    },
    "dependencies": {
        "@reown/appkit": "^1.8.0",
        "@reown/appkit-adapter-wagmi": "^1.8.0",
        "wagmi": "^2.0.0",
        "viem": "^2.0.0",
        "@tanstack/react-query": "^5.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
